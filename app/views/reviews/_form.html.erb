<%= render "shared/errors", object: @review %>
<fieldset>
  <ol>
    <li class="required">
      <%= f.label :name  %><br/>
      <% autofocus = !nested %>
      <%= f.text_field :name, size: 40, autofocus: autofocus %>
    </li>
    <li class="required stars">
      <%= f.label :stars %><br/>
      <% Review::STARS.each do |star| %>
        <span class="star">
          <%= f.radio_button :stars, star %> <%= star %>
        </span>
      <% end %>
    </li>
    <li class="required">
      <%= f.label :comment %><br/>
      <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
    </li>
  </ol>
  <p>
    <%= f.submit %>
    <% unless nested %>
      | <%= link_to "Cancel", @movie, class: "button" %>
    <% end %>
  </p>
</fieldset>
