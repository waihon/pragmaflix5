<article id="movie" class="movie">
  <header>
    <%= image_for @movie %>
    <h1><%= @movie.title %></h1>
    <h2>Released: <%= @movie.released_on %></h2>
  </header>

  <p>
    <%= @movie.description %>
  </p>

  <h3 class="no-rule">
    <%= @movie.rating %> &bull; <%= @movie.duration %>
  </h3>

  <h3>Cast</h3>
  <p>
    <%= @movie.cast %>
  </p>

  <h3>Director</h3>
  <p>
    <%= @movie.director %>
  </p>

  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>

  <h3>Average Review</h3>
  <p>
    <%= format_average_stars(@movie) %>
  </p>

  <% if @movie.recent_reviews.any? %>
    <h3>Recent Reviews</h3>
    <p>
      <%= render "reviews/reviews", reviews: @movie.recent_reviews, nested: true %>
    </p>
  <% end %>

  <p>
    Read all <%= link_to pluralize(@movie.reviews.count, "review"),
                         movie_reviews_path(@movie) %>
  </p>

  <footer>
    <nav>
      <p>
        <%= link_to "Write Review", new_movie_review_path(@movie), class: "button ok review" %> </br>
      </p>
      <%= link_to "Edit", edit_movie_path(@movie), class: "button" %> |
      <%= link_to "Delete", @movie, class: "button",
                  method: :delete, data: { confirm: "Are you sure?" } %>
    </nav>
  </footer>
  <p>
    <%= form_for @review, url: create_review_movie_path(@movie) do |form| %>
      <%= render "reviews/form", f: form, nested: true %>
    <% end %>
  </p>
</article>
